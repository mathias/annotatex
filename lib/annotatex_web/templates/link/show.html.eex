<h2>Show Link</h2>

<ul>

  <li>
    <strong>Title:</strong>
    <%= @link.title %>
  </li>

  <li>
    <strong>External url:</strong>
    <%= @link.external_url %>
  </li>

  <li>
    <strong>Commentary:</strong>
    <%= @link.commentary %>
  </li>

  <li>
    <strong>Tags:</strong>
    <%= @link.tags %>
  </li>

</ul>

<span><%= link "Edit", to: link_path(@conn, :edit, @link) %></span>
<span><%= link "Back", to: link_path(@conn, :index) %></span>
